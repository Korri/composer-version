{
    "name": "korri/composer-version",
    "description": "Update your package version for git managed composer packages.",
    "version": "1.0.1",
    "license": "MIT",
    "bin": [
        "composer-version"
    ],
    "authors": [
        {
            "name": "Hugo Vacher",
            "email": "composer-version@korri.fr"
        }
    ],
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.3",
        "mikey179/vfsStream": "~1"
    },
    "autoload": {
        "psr-4": {
            "Korri\\ComposerVersion\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
